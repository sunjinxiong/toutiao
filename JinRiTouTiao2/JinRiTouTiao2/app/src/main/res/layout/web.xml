<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/web_fan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/leftbackbutton_titlebar_normal" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
           android:src="@drawable/btn_more_title_detail_normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="280dp"
            />
</LinearLayout>

    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFCAC7C7"
        >

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#FFE9E3E3"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/web_pin"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:hint="写评论..."
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/web_pinlun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_comment_pressed"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <ImageView
            android:id="@+id/web_shou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/love_jokebar_textpage_pressed_night"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <ImageView
            android:id="@+id/web_fenxaing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shareicon_titlebar_dynamic_normal_night"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>
</LinearLayout>